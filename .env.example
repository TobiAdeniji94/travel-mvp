# APIs (Optional - ETL scripts only)
GOOGLE_MAPS_API_KEY=your_key_here
OPENWEATHER_API_KEY=your_key_here

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
